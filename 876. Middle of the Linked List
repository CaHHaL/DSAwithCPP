/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        ListNode* temp=head;
        int idx=0;
        while(temp!=nullptr){
            idx++;
            temp=temp->next;
        }
        idx=idx/2;
        temp=head;
        int cnt=0;
        for(int i=0;i<idx;i++){
            temp=temp->next;
        }
    return temp;
    }
};